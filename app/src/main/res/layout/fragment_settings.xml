<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground">

    <LinearLayout
        android:id="@+id/settings_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile Option -->
        <TextView
            android:id="@+id/option_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

        <!-- Notification Option -->
        <TextView
            android:id="@+id/option_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

        <!-- Appearance Option -->
        <TextView
            android:id="@+id/option_appearance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Appearance"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

        <!-- Dark Mode Toggle (Initially Hidden) -->
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/theme_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dark Mode"
            android:visibility="gone"
            android:layout_marginStart="32dp"
            android:paddingVertical="8dp" />

        <!-- Debug Mode Toggle (Initially Hidden) -->
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/debug_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debug Mode"
            android:visibility="gone"
            android:layout_marginStart="32dp"
            android:paddingVertical="8dp" />

        <!-- Export Data Option -->
        <TextView
            android:id="@+id/option_export_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Export Data"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

        <!-- Test Option -->
        <TextView
            android:id="@+id/option_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

        <!-- Tutorial Option -->
        <TextView
            android:id="@+id/option_tutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tutorial"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

        <!-- Help Option -->
        <TextView
            android:id="@+id/option_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

        <!-- About Us Option -->
        <TextView
            android:id="@+id/option_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

    </LinearLayout>
</ScrollView>
